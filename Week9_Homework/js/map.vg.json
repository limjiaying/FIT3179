{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Population in 2022",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Week9_Homework/js/output.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Week9_Homework/js/output.json",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Week9_Homework/js/output.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Week9_Homework/data/world_population.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "2022_Population",
                            "2000_Population"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "2022_Population",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5000000,
                            150000000,
                            500000000,
                            1000000000
                        ],
                        "range": [
                            "#edf8e9",
                            "#bae4b3",
                            "#74c476",
                            "#238b45"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "2022_Population",
                        "type": "quantitative",
                        "title": "2022 Population"
                    }
                ]
            }
        }
    ]
}