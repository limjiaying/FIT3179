{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Data_Visualization_Project2/data/world_population.csv"
    },
    "transform": [
        {
            "calculate": "(datum['2022Population']-datum['2020Population'])/2",
            "as": "After 2020"
        },
        {
            "calculate": "(datum['2020Population']-datum['2010Population'])/10",
            "as": "Before 2020"
        },
        {
            "filter": "datum.Rank <= 15"
        }
    ],
    "spacing": 0,
    "hconcat": [
        {
            "width": 400,
            "title": "Before 2020",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "Country",
                    "type": "nominal",
                    "axis": null
                },
                "x": {
                    "field": "Before 2020",
                    "type": "quantitative",
                    "title": "population",
                    "axis": {
                        "format": "s"
                    },
                    "sort": "descending"
                },
                "color": {
                    "value": "skyBlue"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Before 2020",
                        "type": "quantitative"
                    },
                    {
                        "field": "After 2020",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "width": 30,
            "view": {
                "stroke": null
            },
            "mark": {
                "type": "text",
                "align": "center"
            },
            "encoding": {
                "y": {
                    "field": "Country",
                    "type": "ordinal",
                    "axis": null
                },
                "text": {
                    "field": "Country",
                    "type": "nominal"
                }
            }
        },
        {
            "width": 400,
            "title": "After 2020",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "Country",
                    "title": null,
                    "axis": null
                },
                "x": {
                    "field": "After 2020",
                    "type": "quantitative",
                    "title": "population",
                    "axis": {
                        "format": "s"
                    }
                },
                "color": {
                    "value": "orange"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Before 2020",
                        "type": "quantitative"
                    },
                    {
                        "field": "After 2020",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ],
    "config": {
        "view": {
            "stroke": null
        },
        "axis": {
            "grid": false
        },
        "title": {
            "font": "sans-serif",
            "fontSize": 16
        }
    }
}