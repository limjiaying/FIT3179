{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Countries with Top Population Growth Rate",
    "data": {
        "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Data_Visualization_Project2/data/world_population.csv"
    },
    "width": "container",
    "height": {
        "step": 40
    },
    "transform": [
        {
            "calculate": "datum.GrowthRate *1 ",
            "as": "Growth Rate"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "ranking"
                }
            ],
            "sort": [
                {
                    "field": "Growth Rate",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.ranking <= 10"
        }
    ],
    "encoding": {
        "y": {
            "field": "Country",
            "type": "nominal"
        },
        "x": {
            "field": "Growth Rate",
            "type": "quantitative",
            "axis": {
                "grid": false
            },
            "scale": {
                "domain": [
                    0,
                    1.2
                ]
            }
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "Growth Rate",
                "type": "quantitative"
            },
            {
                "field": "Continent",
                "type": "nominal"
            }
        ]
    },
    "layer": [
        {
            "mark": {
                "type": "bar",
                "yOffset": 5,
                "cornerRadiusEnd": 2,
                "height": {
                    "band": 0.7
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "xOffset": -5,
                "yOffset": 5,
                "aria": false,
                "color": "white"
            },
            "encoding": {
                "text": {
                    "field": "Growth Rate",
                    "type": "quantitative"
                }
            }
        }
    ],
    "config": {
        "title": {
            "font": "sans-serif",
            "fontSize": 16
        }
    }
}