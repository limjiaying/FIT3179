{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 10 country with the Highest Population Growth Rate",
    "data": {
        "url": "https://raw.githubusercontent.com/limjiaying/FIT3179/main/Data_Visualization_Project2/data/world_population.csv"
    },
    "transform": [
        {
            "calculate": "datum.GrowthRate *1 ",
            "as": "Growth Rate"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "ranking"
                }
            ],
            "sort": [
                {
                    "field": "Growth Rate",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.ranking <= 10"
        }
    ],
    "mark": "bar",
    "encoding": {
        "y": {
            "field": "Country",
            "type": "nominal"
        },
        "x": {
            "field": "Growth Rate",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "Growth Rate",
                "type": "quantitative"
            }
        ]
    }
}